#!/bin/sh

# File for sshd
NAME="sshd"

main () {
    case "$1" in
    -start) /usr/bin/sshd;;
    -stop) killall sshd;;
    -restart) busybox setsid sh -c '"$0" stop "$@"; "$0" start "$@"' "$0" "$@";;
    -poll)
	echo_color 3 ":: $NAME is running."
	return 0;; # doesn't make much sense for this service
    esac
}

main "$@"