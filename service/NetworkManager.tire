#!/bin/sh

# File for NetworkManager
NAME="NetworkManager"

main () {
    case "$1" in
    -start) NetworkManager;;
    -stop) killall NetworkManager;;
    -restart) 
	killall NetworkManager
	sleep 1
	NetworkManager;;
    -poll)
	echo_color 3 ":: $NAME is running."
	return 0;; # doesn't make much sense for this service
    esac
}

main "$@"