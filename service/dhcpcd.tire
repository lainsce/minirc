#!/bin/sh

# File for dhcpcd
NAME="dhcpcd"

main () {
    case "$1" in
    -start) dhcpcd -nqb;;
    -stop) killall dhcpcd;;
    -restart) 
	killall dhcpcd
	sleep 1
	dhcpcd -nqb;;
    -poll)
	echo_color 3 ":: $NAME is running."
	return 0;; # doesn't make much sense for this service
    esac
}

main "$@"