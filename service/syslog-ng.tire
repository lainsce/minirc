#!/bin/sh

# File for syslog-ng
NAME="syslog-ng"

main () {
    case "$1" in
    -start) syslog-ng;;
    -stop) killall syslog-ng;;
    -restart) 
	killall syslog-ng
	sleep 1
	syslog-ng;;
    -poll)
	echo_color 3 ":: $NAME is running."
	return 0;; # doesn't make much sense for this service
    esac
}

main "$@"