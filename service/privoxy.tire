#!/bin/sh

# File for privoxy
NAME="privoxy"

main () {
    case "$1" in
    -start) privoxy --user privoxy.privoxy /etc/privoxy/config;;
    -stop) killall ;;
    -restart) 
	killall privoxy
	sleep 1
	privoxy --user privoxy.privoxy /etc/privoxy/config;;
    -poll)
	echo_color 3 ":: $NAME is running."
	return 0;; # doesn't make much sense for this service
    esac
}

main "$@"