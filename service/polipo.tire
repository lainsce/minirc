#!/bin/sh

# File for polipo
NAME="polipo"

main () {
    case "$1" in
    -start) su -c 'polipo daemonise=true logFile="/var/log/polipo.log"' -s /bin/sh - nobody;;
    -stop) killall polipo;;
    -restart) 
	killall polipo
	sleep 1
	su -c 'polipo daemonise=true logFile="/var/log/polipo.log"' -s /bin/sh - nobody;;
    -poll)
	echo_color 3 ":: $NAME is running."
	return 0;; # doesn't make much sense for this service
    esac
}

main "$@"